{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
   "dependencyDashboard": false,
   "major": {
    "enabled": false
   },
   "schedule": [
    "every 1 hour after 00:00 and before 23:59 every day"
   ],
   "automergeSchedule": [
    "before 4am"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "matchPackagePatterns": ["eslint"],
      "groupName": "eslint",
      "automerge": true
    }
  ]
}
